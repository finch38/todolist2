<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object  %>

      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Full Name" %>

      <%= f.label :email %>
      <%= f.text_field :email, :placeholder => "my@example.com" %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "6 characters minimum"%>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, :placeholder => "Retype the Password" %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>