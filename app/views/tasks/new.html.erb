<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/task_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <p>Sorry, you have to sign in:</p>
  <%= link_to "Sign up now!", signup_path,
                              class: "btn btn-large btn-primary" %>
<% end %>