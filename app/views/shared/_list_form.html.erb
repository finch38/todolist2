<div class = "listform">
	<%= form_for(@list) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <div class="field">
	    <%= f.text_field :title, placeholder: "List Title" %>
	  </div>
	  <div class="field">
	    <%= f.text_area :description, placeholder: "Mandatory list description..." %>
	  </div>
	  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
	<% end %>
</div>